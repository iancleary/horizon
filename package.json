{
  "private": true,
  "name": "horizon",
  "description": "My application",
  "version": "0.0.6",
  "author": "Ian Cleary <github@iancleary.me>",
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "lint": "next lint",
    "lint-staged": "lint-staged",
    "prettier": "prettier --write --ignore-unknown .",
    "prettier:check": "prettier --check --ignore-unknown .",
    "start": "next start",
    "test": "npm run prettier:check && npm run lint"
  },
  "git": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown"
  },
  "prettier": {
    "arrowParens": "always",
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true
  },
  "dependencies": {
    "next": "13.4.10",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "styled-components": "6.0.4"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "13.4.10",
    "@types/node": "20.4.1",
    "@types/react": "18.2.17",
    "@types/styled-components": "5.1.26",
    "babel-plugin-styled-components": "2.1.4",
    "eslint": "8.44.0",
    "eslint-config-next": "13.4.10",
    "lint-staged": "13.2.3",
    "prettier": "3.0.0",
    "typescript": "5.1.6"
  },
  "resolutions": {
    "styled-components": "5"
  }
}
