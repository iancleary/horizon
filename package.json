{
  "private": true,
  "name": "horizon",
  "description": "My application",
  "version": "0.0.6",
  "author": "Ian Cleary <github@iancleary.me>",
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "lint": "next lint",
    "lint-staged": "lint-staged",
    "prettier": "prettier --write --ignore-unknown .",
    "prettier:check": "prettier --check --ignore-unknown .",
    "start": "next start",
    "test": "npm run prettier:check && npm run lint"
  },
  "git": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown"
  },
  "prettier": {
    "arrowParens": "always",
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true
  },
  "dependencies": {
    "next": "13.4.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "styled-components": "5.3.11"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "13.4.5",
    "@types/node": "20.2.5",
    "@types/react": "18.2.8",
    "@types/styled-components": "5.1.26",
    "babel-plugin-styled-components": "2.1.3",
    "eslint": "8.42.0",
    "eslint-config-next": "13.4.4",
    "lint-staged": "13.2.2",
    "prettier": "2.8.8",
    "typescript": "5.1.3"
  },
  "resolutions": {
    "styled-components": "5"
  }
}
